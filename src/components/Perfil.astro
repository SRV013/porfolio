---
import Linkedin from "./icons/linkedin.astro";
import Email from "./icons/email.astro";
import Cv from "./icons/cv.astro";
const { id } = Astro.props;
---

<section
    id={id}
    class="flex flex-col-reverse md:flex-row gap-8 items-center md:items-start justify-between py-12"
>
    <div class="flex flex-col gap-4 max-w-2xl">
        <div class="space-y-2">
            <h1
                class="text-5xl font-bold tracking-tight text-gray-900 dark:text-white"
            >
                Andrés Markovic
            </h1>
            <h2 class="text-2xl font-medium text-blue-600 dark:text-blue-400">
                Analista de Sistemas
            </h2>
        </div>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
            +20 años de experiencia en programación. Especializado en el
            desarrollo y diseño de aplicaciones web modernas.
        </p>
        <div class="flex gap-4 mt-4">
            <Linkedin />
            <Email />
            <Cv />
        </div>
    </div>
    <img
        class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover shadow-lg border-4 border-white dark:border-gray-800"
        src="./foto2.JPG"
        alt="Andrés Markovic"
    />
</section>

<style>
    /* Custom styles if needed, but Tailwind handles most */
</style>

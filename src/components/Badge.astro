---
const { value, color } = Astro.props;
const bgColor =
    color === "sec"
        ? "dark:bg-[#1e1b4b] bg-zinc-200 text-black dark:text-white"
        : "bg-zinc-800";
---

<div class="flex items-center">
    <span class={`text-sm px-4 py-1 rounded-3xl ${bgColor}`}>
        {value}
    </span>
</div>

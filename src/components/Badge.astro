---
import Html from "./icons/html.astro";
import Js from "./icons/js.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Nextjs from "./icons/nextjs.astro";
import Tailwaing from "./icons/tailwing.astro";
import React from "./icons/react.astro";
import Css from "./icons/css.astro";
import Aws from "./icons/aws.astro";
import Php from "./icons/php.astro";
import Mysql from "./icons/mysql.astro";
const { value, color } = Astro.props;
const bgColor =
    color === "sec" ? "dark:bg-[#1e1b4b] bg-zinc-400" : "bg-slate-900";
---

<div class="flex items-center">
    <span
        class={`flex gap-2 items-center text-sm px-2 py-1 rounded-md ${bgColor}`}
    >
        {value === "JavaScript" && <Js md/>}
        {value === "PHP" && <Php md/>}
        {value === "CSS" && <Css md/>}

        {value === "MySql" && <Mysql md/>}
        {value === "Aws" && <Aws md/>}
        {value === "React" && <React md/>}
        {value === "Tailwaing" && <Tailwaing md/>}
        {value === "Next.js" && <Nextjs md/>}
        {value === "Astro" && <AstroIcon md/>}
        {value === "Html" && <Html md/>}
        {value}
    </span>
</div>
